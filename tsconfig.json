{
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "sourceRoot": "src",
    "target": "es5",
    "lib": ["es6", "dom"],
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [
      "body-parser",
      "compression",
      "cookie-parser",
      "express",
      "express-serve-static-core",
      "mime",
      "node",
      "serve-static",
      "hammerjs",
      "highlight.js",
      "lodash"
    ]
  },
  "files": [
    "types.d.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false,
  "buildOnSave": false,
  "atom": { "rewriteTsconfig": false }
}
